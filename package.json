{
  "name": "machinist",
  "version": "0.1.0",
  "description": "A boilerplate for a Metalsmith static site.",
  "main": "index.js",
  "pre-commit": "lint-staged",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "doc-ingest": "node ./lib/googledocjson.js",
    "debug": "npm start -- debug",
    "dev": "npm start -- development",
    "build": "npm start -- production",
    "stage": "npm start -- staging",
    "format": "standard --fix && stylefmt -R src/styles/",
    "s3": "gulp publish-story",
    "cdn": "gulp publish-assets",
    "publish": "npm run build && npm run s3",
    "script-lint": "standard --verbose",
    "style-lint": "stylelint '**/*.scss'",
    "lint": "standard --verbose && stylelint '**/*.scss' && htmlhint **/*.{hbs,html} --config .htmlhintrc --ignore **/www/**",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://ianrose@github.com/ianrose/machinist.git"
  },
  "keywords": [
    "metalsmith",
    "boilerplate",
    "static",
    "site"
  ],
  "author": "Ian Rose",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ianrose/machinist/issues"
  },
  "homepage": "https://github.com/ianrose/machinist#readme",
  "lint-staged": {
    "*.scss": "style-lint",
    "*.js": "script-lint"
  },
  "standard": {
    "globals": [
      "$",
      "jQuery"
    ],
    "ignore": [
      "**/vendor/**",
      "**/admin/**",
      "admin.js"
    ]
  },
  "stylelint": {
    "ignoreFiles": [
      "src/styles/vendor/*.scss",
      "src/styles/components/_lightgallery.scss",
      "src/styles/components/lightgallery/*.scss",
      "**/**/_lightslider.scss",
      "**/**/_video-default-js.scss"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "function-name-case": null
    }
  },
  "dependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "googledoc-to-json": "^0.3.0",
    "handlebars": "^4.0.5",
    "handlebars-helpers": "^0.7.5",
    "metalsmith": "^2.2.0",
    "metalsmith-assets": "^0.1.0",
    "metalsmith-collections": "petasittek/metalsmith-collections",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-filedata": "^0.1.0",
    "metalsmith-fingerprint-ignore": "^1.1.2",
    "metalsmith-in-place": "^1.4.4",
    "metalsmith-layouts": "^1.6.5",
    "metalsmith-mapsite": "^1.0.4",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-metadata": "0.0.4",
    "metalsmith-models": "git+https://github.com/ianrose/metalsmith-models.git#handles-no-models",
    "metalsmith-paths": "^3.0.1",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-postcss": "^4.0.0",
    "metalsmith-raw": "^0.2.0",
    "metalsmith-register-helpers": "^0.2.0",
    "metalsmith-sass": "^1.4.0",
    "metalsmith-webpack": "git+https://github.com/ianrose/metalsmith-webpack.git",
    "metalsmith-with-postcss": "^1.0.0",
    "metalsmith-writemetadata": "^0.4.5",
    "moment": "^2.18.1",
    "typesettings": "^4.0.0",
    "typogr": "^0.6.6"
  },
  "devDependencies": {
    "dotenv": "^4.0.0",
    "git-assert-clean": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-awspublish": "^3.3.0",
    "gulp-prompt": "^0.2.0",
    "gulp-rename": "^1.2.2",
    "htmlhint": "^0.9.13",
    "lint-staged": "^3.2.1",
    "log-utils": "^0.2.1",
    "metalsmith-browser-sync": "^1.1.1",
    "metalsmith-debug": "^1.1.0",
    "pre-commit": "^1.1.3",
    "standard": "^8.6.0",
    "stylefmt": "^4.3.1",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1"
  }
}
