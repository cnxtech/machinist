<div{{#if value.id}} id="{{value.id}}"{{/if}} class="reveal">
  <div class="reveal__container">
    {{#if value.kicker}}<div class="kicker kicker--inline">{{value.kicker}}</div>{{/if}}
    {{#each value.body}}
      {{#ifEqual type 'p||div||h1||h2||h3||h4||h5||h6||ul||ol'}}
        <{{type}}>{{{value}}}</{{type}}>
      {{/ifEqual}}
      {{#ifEqual type 'blockquote'}}
        {{> story/blockquote}}
      {{/ifEqual}}
      {{#ifEqual type 'pullquote'}}
        {{> story/pullquote}}
      {{/ifEqual}}
      {{#ifEqual type 'image'}}
      	{{> story/figureImage}}
      {{/ifEqual}}
      {{#ifEqual type 'images'}}
        {{#ifEqual value.type 'gallery'}}
          {{> story/images}}
        {{/ifEqual}}
      {{/ifEqual}}
      {{#ifEqual type 'images'}}
        {{#ifEqual value.type 'slider'}}
          {{> story/slider}}
        {{/ifEqual}}
      {{/ifEqual}}
      {{#ifEqual type 'mpx'}}
        {{> story/mpx}}
      {{/ifEqual}}
      {{#ifEqual type 'video'}}
        {{> story/video}}
      {{/ifEqual}}
      {{#ifEqual type 'chart'}}
        {{> story/chart}}
      {{/ifEqual}}
      {{#ifEqual type 'charts'}}
        {{> story/charts}}
      {{/ifEqual}}
      {{#ifEqual type 'documentcloud'}}
        {{> story/documentcloud}}
      {{/ifEqual}}
      {{#ifEqual type 'ai2html'}}
        {{> story/ai2html}}
      {{/ifEqual}}
      {{#ifEqual type 'callout'}}
        {{> story/callout}}
      {{/ifEqual}}
    {{/each}}
  </div>
